{
  "_WARNING": "EXAMPLE CONFIG - Demonstrates new file organization features",
  "_NOTICE": "This shows hierarchical organization with compressed, simplified filenames",
  
  "proxy": {
    "listen_addr": ":8848",
    "transparent": false,
    "explicit_port": 3128,
    "buffer_size": 32768,
    "read_timeout_seconds": 30,
    "write_timeout_seconds": 30
  },
  "logging": {
    "log_file": "logs/gander.log",
    "capture_dir": "captures",
    "max_file_size_mb": 100,
    "enable_debug": false,
    "log_level": "info",
    "console_minimal": true
  },
  "capture": {
    "max_body_size": 1048576,
    "include_body": true,
    "body_read_timeout": "5s",
    "body_capture_strategy": "default",
    "max_body_size_skip": 10485760,
    "circuit_breaker_threshold": 5,
    "circuit_breaker_cooldown": "30s",
    "file_organization": "hierarchical",
    "file_naming": "simplified", 
    "enable_gzip_files": true
  },
  "rules": {
    "inspect_domains": [
      "example.com",
      "api.example.com"
    ],
    "inspect_source_ips": [],
    "bypass_domains": [
      "*.apple.com"
    ],
    "bypass_source_ips": []
  },
  "tls": {
    "cert_file": "",
    "key_file": "",
    "ca_file": "certs/ca.crt",
    "ca_key_file": "certs/ca.key",
    "cert_dir": "certs",
    "auto_generate": true,
    "valid_days": 365,
    "upstream_cert_sniff": true,
    "cert_profile": "minimal"
  }
}