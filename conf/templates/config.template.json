    "cert_dir": "{{CERT_DIR}}",
    "auto_generate": {{AUTO_GENERATE}},
    "valid_days": {{VALID_DAYS}},
    "upstream_cert_sniff": {{UPSTREAM_SNIFF}},
    "cert_profile": "{{CERT_PROFILE}}",
    "custom_details": {
      "organization": ["{{ORGANIZATION}}"],
      "organizational_unit": ["{{ORG_UNIT}}"],
      "country": ["{{COUNTRY}}"],
