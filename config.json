{
  "proxy": {
    "listen_addr": ":1234",
    "transparent": false,
    "explicit_port": 3128,
    "buffer_size": 32768,
    "read_timeout_seconds": 30,
    "write_timeout_seconds": 30
  },
  "logging": {
    "log_file": "proxy.log",
    "capture_dir": "captures",
    "max_file_size_mb": 100,
    "enable_debug": true
  },
  "rules": {
    "inspect_domains": [
      "google.com",
      "gamu.io",
      "reddit.com",
      "youtube.com",
      "example.com",
      "api.example.com",
      "*.suspicious.com",
      "test.internal",
      "admin.company.local",
      "github.com"
    ],
    "inspect_source_ips": [
      "192.168.1.100",
      "10.0.0.50",
      "172.16.0.25",
      "192.168.100.0/24",
      "127.0.0.1"
    ],
    "bypass_domains": [
      "update.microsoft.com",
      "download.windowsupdate.com",
      "*.cloudflare.com",
      "*.googleapis.com",
      "*.apple.com",
      "ocsp.*.com"
    ],
    "bypass_source_ips": [
      "192.168.1.1",
      "10.0.0.1",
      "169.254.0.0/16"
    ]
  },
  "tls": {
    "cert_file": "",
    "key_file": "",
    "ca_file": "certs/ca.crt",
    "ca_key_file": "certs/ca.key",
    "cert_dir": "certs",
    "auto_generate": true,
    "valid_days": 365,
    "upstream_cert_sniff": true,
    "cert_profile": "custom",
    "custom_details": {
      "organization": ["Gamu Corporation"],
      "organizational_unit": ["IT Security", "Network Operations"],
      "country": ["US"],
      "province": ["California"],
      "locality": ["San Francisco"],
      "street_address": ["123 Market Street"],
      "postal_code": ["94105"],
      "common_name": "Gamu Security CA",
      "email_address": ["security@gamu.io"]
    }
  }
}
